<div class="container"></div>
<section class="showcase">
    <div class="container">
        <div class="pb-2 mt-4 mb-2 border-bottom">
            <h2>Bookings</h2>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-md-1">
                <form action="/booking" method="POST" autocomplete="off">
                    <input type="hidden" name="_id" value="{{booking._id}}">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Booking ID</label>
                            <input type="text" class="form-control" name="booking_id" placeholder="booking_id"
                                value="{{booking.booking_id}}">
                            <div class="text-danger">
                                {{booking.booking_idError}}</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Reserved For</label>
                            <input type="text" class="form-control" name="reservedFor" placeholder="firstname.lastname"
                                value="{{booking.reservedFor}}">
                            <div class="text-danger">
                                {{booking.reservedForError}}</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Booking Date</label>
                        <input type="date" class="form-control" name="bookingDate" placeholder="bookingDate"
                            value="{{booking.bookingDate}}">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Time In</label>
                            <input type="datetime-local" class="form-control" name="timeIn" placeholder="timeIn"
                                value="{{booking.timeIn}}">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Time Out</label>
                            <input type="datetime-local" class="form-control" name="timeOut" placeholder="timeOut"
                                value="{{booking.timeOut}}">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Number of Hours</label>
                            <input type="number" max="2" min="1" class="form-control" name="numberOfHours"
                                placeholder="numberOfHours" value="{{booking.numberOfHours}}">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Computer ID</label>
                            <input type="text" class="form-control" name="computer_id" placeholder="room#_comp#"
                                value="{{booking.computer_id}}">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Room ID</label>
                            <input type="text" class="form-control" name="room_id" placeholder="room#"
                                value="{{booking.room_id}}">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Booking Status</label>
                            <select id="bookingStatusDropdown" class="form-select" name="bookingStatus" >
                                <option value="" disabled hidden selected>Select an option</option>
                                <option value="Confirmed">Confirmed</option>
                                <option value="In Progress">In Progress</option>
                            </select>
                            {{!-- remove if select doesn't break anything<input type="text" class="form-control" name="bookingStatus" placeholder="bookingStatus"
                                value="{{booking.bookingStatus}}"> --}}
                        </div>
                    </div>
                    <br>
                    <div class="form-group float-right">
                        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-database"></i>
                            Submit</button>
                        <a class="btn btn-info btn-sm" href="/admin"><i class="fa fa-list-alt"></i> View All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
</div>